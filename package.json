{
  "dependencies": {
    "cypress": "^15.0.0",
    "cypress-plugin-api": "^2.11.2"
  },
  "devDependencies": {
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "open": "^10.2.0"
  },
  "scripts": {
    "clean": "node clean-reports.js",
    "test": "npm run clean && cypress run",
    "merge-report": "npx mochawesome-merge \"cypress/reports/**/*.json\" > cypress/reports/merged.json",
    "generate-report": "npx mochawesome-report-generator cypress/reports/merged.json -o cypress/reports/html --inline",
    "report": "npm run clean && npm run test && npm run merge-report && npm run generate-report",
    "test:report": "npm run clean && node run-and-report.js"
  }
}
